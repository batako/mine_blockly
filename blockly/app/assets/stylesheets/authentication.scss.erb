.authentication {

  &.index {
    background-image: url(<%= asset_url 'blur-background.png' %>);
    background-size: cover;
    background-position: center top;

    form {
      position: absolute;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      margin: auto;
      height: 262px;
      font-size: 50px;
      text-align: center;
      font-weight: bold;

      .form-wrap {
        margin: 0 auto;
        max-width: 600px;
        background-color: rgba(255,255,255, 0.6);
        padding: 30px 0;
        border-radius: 40px;
        box-shadow: 0 0 black;
      }
      .name-field {
        position: relative;
        display: inline-block;

        .name {
          width: 384px;
          padding: 20px;
          text-align: center;
          background-color: rgba(255, 255, 255, 0.8);
          border: 1px solid #ccc;
          ime-mode: disabled;
          box-shadow: 0px 0px 10px #666 inset;
        }

        .hint {
          font-size: 16px;
          position: absolute;
          top: 0;
          right: 33px;
          background-color: #e40050;
          color: white;
          padding: 5px;
        }
      }

      .btn-wrap {
        margin-top: 30px;

        button {
          border: none;
          border-radius: 30px;
          padding: 20px;
          background-color: rgba(255, 255, 255, 0.1);
          box-shadow: 5px 10px 20px rgba(0, 0, 0, 0.5);
          background-color: #e40050;
          color: white;
        }
      }
    }
  }
}
