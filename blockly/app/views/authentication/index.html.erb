<%= form_with url: sign_in_path, local: true do |form| %>
  <div class="form-wrap">
    I'm
    <span class="name-field">
      <%= form.text_field :login_id,
                          value: params[:name],
                          class: 'name',
                          id: 'name',
                          placeholder: 'your name' %>&nbsp;!
      <span class="hint">
        English-only
      </span>
    </span>
    <div class="btn-wrap">
      <%= form.button "Let's Start Coding" %>
    </div>
  </div>
<% end %>
